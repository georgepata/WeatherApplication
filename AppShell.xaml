<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="WeatherApplication.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:WeatherApplication"
    xmlns:test1="clr-namespace:WeatherApplication.View"
    xmlns:skia="clr-namespace:SkiaSharp.Extended.UI.Controls;assembly=SkiaSharp.Extended.UI"
    Shell.FlyoutBehavior="Disabled"
    Title="WeatherApplication">



    <TabBar>
        <Tab Title ="Home">
            <ShellContent
                Title="Home"
                ContentTemplate="{DataTemplate local:MainPage}"
                Route="MainPage" 
                />
        </Tab>
        
        <Tab Title="Search">
            <ShellContent Title="Search"
                        ContentTemplate="{DataTemplate test1:SearchView}"
                        Route="SearchView"
                            />
        </Tab>

        <Tab Title="Settings">
            <ShellContent
                Title="Settings"
                Route="Settings">
                <ContentPage>
                    <VerticalStackLayout>
                        
                    </VerticalStackLayout>
                </ContentPage>
            </ShellContent>
        </Tab>
    </TabBar>
    

</Shell>

