<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:WeatherApplication.ViewModel"
             xmlns:effects="clr-namespace:Xamarin.KeyboardHelper;assembly=Xamarin.KeyboardHelper"
             x:DataType="viewmodel:SearchViewModel"
             x:Class="WeatherApplication.View.SearchView">
    <VerticalStackLayout Padding="30">
        <Grid ColumnDefinitions="2*,*">
            <Entry Placeholder="Enter your text here..."
                   Text="{Binding InputText}"
                   Grid.Column="0"/>
            <Button Text="Go"
                    Grid.Column="1"
                    Margin="30,0,0,0"
                    Command="{Binding DoSomethingCommand}"/>
        </Grid>

    </VerticalStackLayout>

</ContentPage>
